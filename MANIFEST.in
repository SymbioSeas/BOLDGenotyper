# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CITATION.cff
include QUICKSTART.md
include DOCUMENTATION_PLAN.md
include ZENODO_SETUP.md

# Include configuration examples
recursive-include examples *.yaml *.json

# Include conda environment file
include boldgenotyper_env.yml

# Include test data (if any)
recursive-include tests/data *.tsv *.fasta *.csv

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts
prune build
prune dist
prune *.egg-info

# Exclude development files
exclude .gitignore
exclude .readthedocs.yml
exclude tox.ini
exclude pytest.ini
