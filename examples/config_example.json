{
  "_comment": "BOLDGenotyper Configuration - JSON Format",
  "_usage": "boldgenotyper analyze --config config_example.json --input data.tsv",

  "log_level": "INFO",
  "n_threads": 4,
  "output_dir": "results/analysis",
  "keep_intermediates": false,
  "overwrite_existing": false,

  "dereplication": {
    "clustering_threshold": 0.01,
    "clustering_method": "average",
    "consensus_frequency_cutoff": 0.7,
    "mafft_algorithm": "auto",
    "trim_alignment": true,
    "trimal_method": "automated1",
    "min_sequence_length": 400,
    "max_n_content": 0.1
  },

  "genotype_assignment": {
    "min_identity": 0.90,
    "use_edlib": true,
    "n_threads": 4,
    "report_ties": true,
    "tie_difference_threshold": 0.01
  },

  "geographic": {
    "goas_shapefile_path": null,
    "exclude_centroids": true,
    "exclude_zero_coords": true,
    "min_coordinate_precision": null,
    "validate_marine": false,
    "ocean_basins": [
      "North Atlantic Ocean",
      "South Atlantic Ocean",
      "North Pacific Ocean",
      "South Pacific Ocean",
      "Indian Ocean",
      "Southern Ocean",
      "Mediterranean Sea",
      "South China Sea"
    ]
  },

  "visualization": {
    "color_palette": "colorblind",
    "reference_colors": ["#9D7ABE", "#5AB4AC", "#F2CC8F"],
    "figure_dpi": 300,
    "figure_format": ["png", "pdf"],
    "map_projection": "PlateCarree",
    "map_figsize": [12, 6],
    "barplot_figsize": [10, 6],
    "font_family": "sans-serif",
    "font_size": 11,
    "show_bootstrap_threshold": 70
  },

  "phylogenetic": {
    "build_tree": false,
    "outgroup_fasta": null,
    "substitution_model": "GTR",
    "n_bootstrap": 1000,
    "tree_algorithm": "phyml",
    "midpoint_root": true
  }
}
